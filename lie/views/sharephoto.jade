extends layout

block content
	link(rel='stylesheet', href='/css/share.css')
	div
		img#sharebg(src='/img/web_bg/share_bg.jpg' alt="sharebg")
		img#composite(src='/img/composite.png' alt="composite")
	.sharebtns
		a.button(href="#" onclick="checkLoginState()") Fb登入並上傳照片
		#fbmessage(title='說說話吧~')
			br
			input(type='textarea' placeholder='請輸入照片說明文字...')
		#success_notice_fb(title="Success!")
			span 上傳成功! 快去Facebook看看吧!
		a.button(href="#" onclick="makeqrcode()") QR-code下載照片
		#success_notice_qrcode
			#whitebg
				img#qrcode
		a.button.end(href="#" onclick="restart()") 結束
	script(src='/js/sharephoto.js')
	script(src='/js/button.js')
